<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ua.naiksoftware.slackmusicstatus">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> -->
    <!-- <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/> -->
    <!-- <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/> -->

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- For support larger display formats like in LG G6 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
        </activity>

        <receiver
            android:name=".ChangeMusicReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.music.metachanged"/>
                <action android:name="com.htc.music.metachanged"/>
                <action android:name="fm.last.android.metachange"/>
                <action android:name="com.sec.android.app.music.metachanged"/>
                <action android:name="com.nullsoft.winamp.metachanged"/>
                <action android:name="com.amazon.mp3.metachanged"/>
                <action android:name="com.miui.player.metachanged"/>
                <action android:name="com.real.IMP.metachanged"/>
                <action android:name="com.sonyericsson.music.metachanged"/>
                <action android:name="com.rdio.android.metachange"/>
                <action android:name="com.samsung.sec.android.MusicPlayer.metachanged"/>
                <action android:name="com.andrew.apollo.metachanged"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".PlaybackCompleteReceiver"
                  android:exported="true">
            <intent-filter>
                <action android:name="com.android.music.playbackcomplete"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".PlayStateReceiver"
                  android:exported="true">
            <intent-filter>
                <action android:name="com.android.music.playstatechanged"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".ChangeStatusService"
            android:exported="false">
        </service>
    </application>

</manifest>